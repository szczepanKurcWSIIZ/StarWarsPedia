<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/textViewDetailsName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="Name"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewDetailsName"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/detailsHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height"
            />

        <TextView
            android:id="@+id/detailsMass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mass"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/detailsHairColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HairColor"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/detailsSkinColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skin Color"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/detailsBirthYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Birth Year"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/detailsGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAddTofavourites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:src="@drawable/ic_add_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:useCompatPadding="true"
        android:elevation="4dp"/>

    <TextView
        android:id="@+id/textViewState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodaj do ulubionych"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="35dp"
        android:layout_marginRight="80dp"
        android:background="@android:color/holo_red_dark"
        android:padding="4dp"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabDeleteFromFavourites"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:src="@drawable/ic_remove_black_24dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:useCompatPadding="true"
        android:elevation="4dp"
        android:visibility="gone"/>

</RelativeLayout>